<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="switch_true" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#33da33</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="switch_false" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#9b9b9b</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
